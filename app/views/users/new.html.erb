<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="signup-form row">
      <h2 class="signup-title">Register is free and fast!</h2>

      <%= form_for(:user, :url => {:controller => 'users', :action => 'create'}) do |f| %>
        <div class="form-group">
          <label>Name: </label>
          <%= f.text_field :name, :class=>"form-control" %>
        </div>

        <div class="form-group">
          <label>Email:</label>
          <%= f.text_field :email, :class=>"form-control" %>
        </div>

        <div class="form-group">
          <label>Password:</label>
          <%= f.password_field :password, :class=>"form-control" %>
        </div>

        <div class="form-group">
          <label>Repeat password</label>
          <%= f.password_field :password_confirmation, :class=>"form-control" %>
        </div>
        <%= f.submit "Register", :class=>"btn btn-primary col-sm-12 btn-signup" %>
      <% end %>
      
      <% if @user.errors.any? %>
        <ul class="Signup_Errors">
        <% for message_error in @user.errors.full_messages %>
          <li>* <%= message_error %></li>
        <% end %>
        </ul>
      <% end %>
    </div>

    <div class="container-already-registered">
      <p><%= link_to "Already have a account, go to login.", login_path %></p>
    </div>
  </div>
</div>