<%= form_for [@list, @card] do |f|  %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_area :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :labels %>
    <%= f.collection_check_boxes :label_ids, @labels, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.label :position %>
    <%= f.text_field :position, class: 'form-control' %>
  </div>

  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
