<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2 board-menu">
      <div class="menu-action">
        <h4>Actions</h4>
        <ul class="menu">
          <li><%= link_to "Add List", new_list_path, class: "btn btn-primary" %></li>
        </ul>
      </div>
      <div id="menu-labels">
        <h4>Labels</h4>
        <ul class="menu">
          <% @labels.each do |label| %>
            <li style="background-color:<%= label.color %>">
              <%= link_to edit_label_path(label) do %>
                <%= label.name %>
              <% end %>
            </li>
          <% end %>          
        </ul>
        <%= link_to "Add Label", new_label_path, class: "btn btn-primary" %>
      </div>
    </div>
    <div id="board" class="col-sm-10">
      <% @lists.each do |list| %>
        <div class="list">
          <div class="list-header clearfix">
            <h3 class="pull-left"><%= list.title %></h3>
            <%= link_to list_path(list),
                        method: :delete,
                        data: { confirm: "Deseja excluir:" }, class: "pull-right" do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <% end %>
          </div>
          <div class="list-items">
            <% list.cards.each do |card| %>
            <div class="card erow">
              <p class="ecol-xs-4"><%= card.title %></p>
              <div class="labels ecol-xs-4">
                <% card.labels.each do |label| %>
                  <div class="card-label" style="background-color: <%= label.color %>"></div>
                <% end %>
              </div>

              <%= link_to edit_list_card_path(list, card), class: "ecol-xs-1" do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
              
              <%= link_to list_card_path(list, card),
                method: :delete,
                data: { confirm: "Deseja excluir:" }, class: "ecol-xs-1" do %>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              <% end %>
            </div>
            <% end %>
          </div>
          <%= link_to "Add card", new_list_card_path(list), class: "btn btn-primary" %>
        </div>
      <% end %>
      
    </div>
  </div>
</div>