<!DOCTYPE html>
<html>
<head>
  <title>TaskBoard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="header">
    <div class="row">
      <div class="col-xs-10"><h2 class="centered-text"><a href="/">Task Board</a></h2></div>
      <div id="user-info" class="col-xs-2">Welcome <%= @current_user.name %></div>  
    </div>
  </div>
  <div class="content">
    <%= yield %>
  </div>
</body>
</html>
