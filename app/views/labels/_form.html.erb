<%= form_for @label do |f|  %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :color %>
    <%= f.text_field :color, class: "form-control" %>
  </div>

  <div>
    <%= f.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>
